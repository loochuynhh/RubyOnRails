<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<p>
  <strong>Email:</strong>
  <%= @user.email%>
</p>
<p>
  <strong>Create at:</strong>
  <%= @user.created_at%>
</p>
<p>
  <strong>Updated at:</strong>
  <%= @user.updated_at%>
</p>
<p>
  <strong>Current Time:</strong>
  <%= Time.now %>
</p>
